<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hy.presentation.fragment.SpiderFragment">

    <include layout="@layout/public_toolbar" />

    <com.hy.library.widget.SpiderView
        android:layout_width="200dp"
        android:layout_height="220dp" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_circle1_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="@mipmap/circle1"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_circle2_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="@mipmap/circle2"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_circle3_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="@mipmap/circle3"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_circle4_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="@mipmap/circle4"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_circle5_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="@mipmap/circle5"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:background="@mipmap/menu" />
    </FrameLayout>

</LinearLayout>
